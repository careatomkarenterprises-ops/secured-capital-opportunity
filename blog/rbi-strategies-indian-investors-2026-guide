<!-- JAVASCRIPT -->
<script>
  document.addEventListener('DOMContentLoaded',function(){
    // update time
    function updateTime(){ 
      let el = document.getElementById('currentTime');
      if(el) el.innerText = new Date().toLocaleString('en-IN',{timeZone:'Asia/Kolkata'});
    }
    setInterval(updateTime,1000); updateTime();

    // hamburger
    const hamburger = document.getElementById('hamburger');
    const navMenu = document.getElementById('navMenu');
    if(hamburger) {
      hamburger.addEventListener('click',()=> navMenu.classList.toggle('active'));
    }

    // FAQ toggle (fully fixed)
    document.querySelectorAll('.faq-question').forEach(btn => {
      btn.addEventListener('click',function(){
        // close others first
        document.querySelectorAll('.faq-question').forEach(other => {
          if(other !== this && other.classList.contains('active')) {
            other.classList.remove('active');
            other.nextElementSibling.classList.remove('active');
            let otherIcon = other.querySelector('.fa-chevron-down, .fa-chevron-up');
            if(otherIcon) {
              otherIcon.classList.remove('fa-chevron-up');
              otherIcon.classList.add('fa-chevron-down');
            }
          }
        });

        // toggle current
        let answer = this.nextElementSibling;
        let icon = this.querySelector('.fa-chevron-down, .fa-chevron-up');
        this.classList.toggle('active');
        answer.classList.toggle('active');
        if(icon) {
          if(icon.classList.contains('fa-chevron-down')) {
            icon.classList.remove('fa-chevron-down');
            icon.classList.add('fa-chevron-up');
          } else {
            icon.classList.remove('fa-chevron-up');
            icon.classList.add('fa-chevron-down');
          }
        }
      });
    });

    // navbar scroll
    window.addEventListener('scroll',()=>{
      document.getElementById('navbar').classList.toggle('scrolled', window.scrollY>50);
    });
  });
</script>

<!-- additional style for FAQ answer (already included but double‚Äëcheck) -->
<style>
  /* these are already inside the main style, but we repeat to ensure  */
  .faq-answer { max-height:0; overflow:hidden; transition: max-height 0.5s; background: white; }
  .faq-answer.active { max-height:400px; }
  .faq-answer-content { padding:0 30px 30px; }
</style>
